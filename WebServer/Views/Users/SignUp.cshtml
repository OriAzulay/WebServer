@model WebServer.Models.User

@{
    ViewData["Title"] = "SignUp";
}
<link rel="stylesheet" href=@String.Format("/css/style2.css") />
<script src=@String.Format("/js/script2.js")></script>

<h1>Sign Up</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <div class="signupFrm">
			<h1 class="title">Sign up</h1>
            </div>
        <form asp-action="SignUp">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" id="userInput" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" id="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label type="Password" value class="control-label">Confirm password</label>
                <input type="Password" id="confirmPass" class="form-control" />
                <span value="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Register" onclick="saveLocal()" class="btn btn-primary" />
            </div>
            <div class="form-group">
                <a>You have an account? click </a><a asp-action="Login">here </a><a>to Login</a>
            </div>
        </form>
        @if (ViewBag.Error != null){
            <div class="text-danger">@ViewBag.Error</div>
        }
    </div>
</div>


<script>
    saveLocal=function(){
        let u = document.getElementById('userInput').value;
        let userName = localStorage.setItem('userInput',u)
        console.log(userName.value)
        window.alert(userName.value);
    }
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
